<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Pageid</th>
      <th>X</th>
      <th>Y</th>
      <th>Element</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.pageID %></td>
        <td><%= event.x %></td>
        <td><%= event.y %></td>
        <td><%= event.element %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

